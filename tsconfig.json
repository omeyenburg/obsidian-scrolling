{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "baseUrl": "src",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@typings/*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
