{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [ "DOM", "ES2020" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": [ "src/**/*.ts" ]
}
